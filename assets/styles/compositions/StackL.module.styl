.stack-l
  display: flex
  flex-direction: column
  justify-content: flex-start

  &[recursive] > *
    margin-block: 0

  & > * + *,
  &[recursive] * + *
    margin-block-start: var(--gap, 1.5rem)

  &[squeezed] > * + *
    margin-block-start: 0

  &[compact] > * + *
    margin-block-start: calc(var(--gap, 1.5rem) / 2)

  &[wide] > * + *
    margin-block-start: calc(var(--gap, 1.5rem) * 3)